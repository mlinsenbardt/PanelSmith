            if(count > 4)
                context.strokeRect(20, 404, 275, 172);
            if(count > 5)
                context.strokeRect(315, 404, 275, 172);
            if(count > 6)
                context.strokeRect(20, 596, 275, 172);
            if(count > 7)
                context.strokeRect(315, 596, 275, 172);
